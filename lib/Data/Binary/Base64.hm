module Data.Binary.Base64 (encode, decode)  where

import Foreign (ffi1)

encode :: Binary -> Binary
encode = ffi1 :base64 :encode

-- TODO: handle exception?
decode :: Binary -> Binary
decode = ffi1 :base64 :decode
