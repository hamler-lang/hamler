module Data.Bool where

-- | An alias for `Boolean` type.
type Bool = Boolean

infixr 3 and as &&
infixr 2 or as ||

and :: Bool -> Bool -> Bool
and true true = true
and _    _    = false

or :: Bool -> Bool -> Bool
or false false = false
or _     _     = true

not :: Bool -> Bool
not true  = false
not false = true

-- | An alias for `true', which is used for guards.
otherwise :: Bool
otherwise = true
