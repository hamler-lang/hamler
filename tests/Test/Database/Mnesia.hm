showAll :: Atom -> IO ()
showAll name = do
  v <- dirtyAllKeys name
  seqio [ do
          vv <- dirtyRead name pname
          println $ showAny vv
        | pname <- v]
  return ()

showFemales :: IO ()
showFemales = do
  vs <- M.transaction $ M.matchObject (:employee, :_, :_, :_, :_, :females )
  println $ showAny vs

